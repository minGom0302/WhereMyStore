<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".item.BottomSheet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"
        android:text="@string/bottom_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/bottom_msg"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bottomSheet_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp"
            android:text="@string/camera"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/frame00"
            android:drawableTop="@drawable/icon_camera_black"
            android:drawablePadding="5dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bottomSheet_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp"
            android:text="@string/gallery"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/frame00"
            android:drawableTop="@drawable/icon_gallery_black"
            android:drawablePadding="5dp" />
    </LinearLayout>
</LinearLayout>